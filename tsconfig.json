{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "Node",
    "lib": ["ESNext", "DOM"],
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "baseUrl": ".",
    "paths": {
      "@subflow/*": ["src/*"],
      "@build/*": ["dist/*"]
    }
  },
  "include": ["src", "test"],
  "exclude": ["node_modules", "dist", "coverage"]
}
