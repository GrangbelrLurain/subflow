{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "Node",
    "lib": ["ESNext", "DOM"],
    "declaration": true,
    "emitDeclarationOnly": true,
    "outDir": "dist",
    "composite": false,
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "baseUrl": ".",
    "paths": {
      "@subflow/*": ["src/*"],
      "@build/*": ["dist/*"]
    }
  },
  "include": ["src", "test"],
  "exclude": ["node_modules", "coverage"]
}
